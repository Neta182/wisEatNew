<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SearchIngredients"
    tools:showIn="@layout/activity_search_ingredients">

    <TextView
        android:id="@+id/searchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="86dp"
        android:text="Search ingredients"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="79dp" />

    <SearchView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchTitle"
        android:layout_marginStart="36dp"
        android:layout_marginTop="86dp"/>

    <TextView
        android:id="@+id/searchComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search"
        android:layout_marginStart="36dp"
        android:layout_marginTop="86dp"
        android:text='enter specific ingredients or a few seperteting with ","' />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchComment"
        android:layout_marginStart="150dp"
        android:layout_marginTop="86dp"
        android:text="Search" />
</RelativeLayout>